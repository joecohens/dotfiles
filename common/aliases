# Aliases

# Basics
alias c="clear"
alias lt="ls -ltFh"

# Edit dotfiles with vim
alias dotfiles="vi ~/.dotfiles/"

# Laravel
alias art="php artisan"
alias tinker="php artisan tinker"

# PHP testing
alias phpunit="vendor/bin/phpunit"
alias t="clear && vendor/bin/phpunit -d memory_limit=512M"
alias ts="vendor/bin/phpspec run"
alias tc="vendor/bin/codecept run"

# Git
alias nah="git reset --hard; git clean -df;"

# Kubernetes
alias k="kubectl"

# Performance
alias headers="httpstat"
